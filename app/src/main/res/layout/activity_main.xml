<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yaseerfarah22.com.follow_me3.MainActivity">



    <com.esri.android.map.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapoptions.MapType="Streets"
        mapoptions.center="30.044281, 31.340002"
        mapoptions.ZoomLevel="12"
        />

    <ImageButton
        android:id="@+id/rout"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@+id/location"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:background="@mipmap/button_form"
        android:elevation="8dp"
        android:src="@drawable/ic_directions_black_24dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/location"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/button_form"
        android:src="@drawable/ic_my_location_black_24dp"
        android:elevation="8dp"
        tools:ignore="MissingConstraints"
        />





    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/search"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:elevation="8dp"
        android:layout_alignParentTop="true"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search5"
                android:backgroundTint="@color/gray"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/searchButton"                />

            <AutoCompleteTextView
                android:id="@+id/searchText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/searchButton"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:hint="@string/search_hint"
                android:textColorHint="@color/gray"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:layout_centerVertical="true"
                android:background="#00000000"
                tools:ignore="MissingConstraints"
               />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
