<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        
        
        


        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </FrameLayout>






    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:id="@+id/bottom_sheet"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="115dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            >


            <ImageButton
                android:id="@+id/bottom_ex"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:background="@mipmap/button_form"
                android:src="@drawable/ic_navigation_black_24dp"
                android:elevation="8dp"
                tools:ignore="MissingConstraints"
                />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"

                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="28sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/km_number"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/km_number"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="3dp"
                        android:text="KM"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="28sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/time_number"
                        android:layout_toLeftOf="@+id/timr_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="3dp"
                        android:layout_alignParentEnd="true"
                        android:text="Hr/Mn"
                        android:id="@+id/timr_text"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/gray"
                        android:layout_below="@+id/timr_text"
                        android:layout_marginTop="10dp"
                        android:id="@+id/line"
                        />


                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="20dp"
                        android:choiceMode="singleChoice"
                        android:id="@+id/left_drawer"
                        />



                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>






</android.support.design.widget.CoordinatorLayout>